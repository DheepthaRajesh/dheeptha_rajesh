<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval">
            <solid android:color="@color/stream_ui_accent_red" />
            <stroke
                android:width="1dp"
                android:color="@color/stream_ui_black" />

        </shape>
    </item>
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval">
            <solid android:color="@color/stream_ui_accent_green" />
            <stroke
                android:width="1dp"
                android:color="@color/stream_ui_black" />
        </shape>
    </item>
</selector>

